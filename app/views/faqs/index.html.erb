<% provide(:title, 'FAQ') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns" style="margin: 1em 0em 1em 1em">
			<%= render 'layouts/sidebar_left' %>
		</div>
	
		<div class="small-8 columns" style="margin: 1em 1em 0em 0em">
			<%= render partial: "accordion", locals: {title: "Ordering", faqs: @ordering_faqs} %>
			<%= render partial: "accordion", locals: {title: "General", faqs: @general_faqs} %>
			<%= render partial: "accordion", locals: {title: "Assembly", faqs: @assembly_faqs} %>
			<%= render partial: "accordion", locals: {title: "Support", faqs: @support_faqs} %>
		 	<% if signed_in? && current_user.admin? %>
				<%= link_to 'New Faq', new_faq_path, label: 'New Faq', class: "button" %>
				<%= link_to 'Upload Faqs', new_faq_path, label: 'Upload Faqs', class: "button" %>
				<%= link_to 'Download Faqs', new_faq_path, label: 'Download Faqs', class: "button" %>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->
