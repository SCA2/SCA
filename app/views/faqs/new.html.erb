<% provide(:title, 'New FAQ') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns">
			<%= render 'layouts/sidebar_left' %>
		</div>
		<div class="small-9 columns">
			<%= form_for(@faq) do |faq| %>
				<%= render 'shared/errors', object: faq.object %>
				<%= render 'form', f: faq, legend: 'New FAQ' %>
				<div class="actions">
					<div class="button-box">
						<%= faq.submit 'Create', class: 'button' %>
						<%= link_to 'Quit', faqs_path, class: 'button' %>
					</div>
				</div>
			<% end %>
		</div>
	</div>	
</div>

