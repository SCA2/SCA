<% provide(:title, faq) %>

<div class="box_2">
	<div class="row">
		<div class="small-9 columns">
			<%= form_for(faq) do |fq| %>
				<%= render 'shared/errors', object: fq.object %>
				<%= render 'form', f: fq, legend: 'Edit FAQ ' << faq.id.to_s %>
				<div class="admin-box">
					<%= fq.submit 'Update', class: 'button admin' %>
					<%= link_to 'Quit', faqs_path, class: 'button admin' %>
				</div>
			<% end %>
		</div>
		<div class="small-3 columns">
			<%= render 'layouts/sidebar_left' %>
		</div>
	</div>	
</div>

