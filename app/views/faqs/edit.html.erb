<% provide(:title, @faq) %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns">
			<%= render 'layouts/sidebar_left' %>
		</div>
		<div class="small-9 columns">
			<%= form_for(@faq) do |faq| %>
				<%= render 'shared/errors', object: faq.object %>
				<%= render 'form', f: faq, legend: 'Edit FAQ ' << @faq.id.to_s %>
				<div class="admin-box">
					<%= faq.submit 'Update', class: 'button admin' %>
					<%= link_to 'Quit', faqs_path, class: 'button admin' %>
				</div>
			<% end %>
		</div>
	</div>	
</div>

