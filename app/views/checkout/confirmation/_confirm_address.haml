%fieldset.confirm-address
  %legend= legend
  %table.confirm-table
    %tr
      %td= f.first_name + ' ' + f.last_name
    %tr
      %td= f.address_1
    - if f.address_2 && f.address_2.size > 0
      %tr
        %td= f.address_2
    %tr
      %td= f.city + ', ' + f.state_code
    %tr
      %td= f.post_code
    %tr
      %td= f.country
    %tr
      %td= f.telephone