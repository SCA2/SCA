<% provide(:title, 'Order Payment') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns">
			<%= render 'layouts/sidebar' %>
		</div>
		<div class="small-9 columns">
			<%= form_for(@order) do |f| %>
				<%= render 'shared/errors', object: f.object %>
				<%= render 'progress_bar' %>
				<%= render 'form', f: f, legend: "Billing Address" %>
				<%= render 'form', f: f, legend: "Shipping Address" %>
				<%= link_to 'Back', orders_path, class: "button"  %>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->
