<div id="signin">
	<%= form_for(:session, url: sessions_path) do |f| %>
		<fieldset>
			<legend>Sign in</legend>
			<table class="user-table">
				<tr class="field">
					<td class="label"><%= f.label :email  %></td>
					<td class="input"><%= f.text_field :email %></td>
				</tr>
				<tr class="field">
					<td class="label"><%= f.label :password %></td>
					<td class="input"><%= f.password_field :password %></td>
				</tr>
				<tr class="field">
					<td class="label"><%= f.label :password_confirmation %></td>
					<td class="input"><%= f.password_field :password_confirmation %></td>
				</tr>
				<tr class="field">
					<td class="label"><%= f.label :remember_me, 'Remember me on this computer' %></td>
					<td class="input"><%= f.check_box :remember_me %></td>
				</tr>
			</table>
			<div class="actions">
				<%= submit_tag 'Sign in', class: 'button' %>
				<%= link_to "Forgot your password?", new_password_reset_path, class: 'button' %>
			</div>
		</fieldset>
	<% end %>
</div>
