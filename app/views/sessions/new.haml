= provide(:title, 'Sign in')

.box_2
  .grid-x
    .medium-1.hide-for-small.cells
    .medium-7.small-12.cells
      .edit-profile
        = form_for(@session, url: sessions_path) do |f|
          = render 'shared/errors', object: f.object
          .user-info
            = render 'form', f: f
          .button-box
            = submit_tag 'Sign in', class: 'button user'
            = link_to "Forgot your password?", new_password_reset_path, class: 'button user'
    .medium-1.hide-for-small.cells
    .medium-3.small-12.cells
      = render 'layouts/sidebar'