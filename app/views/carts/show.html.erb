<% provide(:title, @cart) %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns" style="margin: 1em 0em 1em 1em">
			<%= render 	'layouts/sidebar_left', :products => @products %>
		</div>
	
		<div class="small-8 columns" style="margin: 1em 1em 0em 0em">
			<%= render 'shared/errors', :object => @cart %>
			<% @cart.line_items.each do |item| %>
				<%= render 'line_item', :item => item %>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->

