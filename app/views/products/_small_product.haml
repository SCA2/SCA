.product-box.grid-x
  .image-box.index.medium-8.small-12.cells(id="image-box-#{ @product.id.to_s }")
    = link_to image_tag(@product.image_1, class: "product-image"), product_path(@product)
  .text-box.index.medium-4.small-12.cells(id="text-box-#{ @product.id.to_s }")
    = link_to @product.model, product_path(@product), class: 'text-box model'
    %p.text-box.description(id="short-description-#{ @product.id.to_s }")
      = @product.short_description.html_safe
    .text-box.notes(id="notes-#{ @product.id.to_s }")
      = @product.notes.html_safe
    = render 'options/option', index: true
    = render 'options/admin'
- if signed_in_admin?
  .admin-box
    = link_to 'Edit Product', edit_product_path(@product), class: "button admin"
    = link_to 'Delete Product', @product, method: :delete, class: "button admin", data: { :confirm => 'Are you sure?' }