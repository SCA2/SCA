<% provide(:title, 'Products') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns" style="margin: 1em 0em 1em 1em">
			<%= render 'layouts/sidebar_left' %>
		</div>
	
		<div class="small-8 columns" style="margin: 1em 1em 0em 0em">
			<% @products.each do |p| %>
				<p><%= p.model %></p>
				<p><%= p.upc %></p>
				<p><%= p.short_description %></p>
				<p><%= p.long_description %></p>
				<p><%= image_tag(p.image_1) %></p>
				<p><%= image_tag(p.image_2) %></p>
			<% end %>
		 	<% if signed_in? && current_user.admin? %>
				<%= link_to 'New Product', new_product_path, label: 'New Product', class: "button" %>
				<%= link_to 'Download CSV', products_path(format: 'csv'), label: 'Download CSV', class: "button" %>
				<%= form_tag import_faqs_path, multipart: true do %>
				  <%= file_field_tag :file %>
  				<%= submit_tag "Upload CSV", class: "button" %>
				<% end %>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->
