<% provide(:title, 'Products') %>

<div class="box_2">
	<div class="row">
		<div class="small-12 columns" style="margin: 0em 0em 0em 0em">
			<% @category.each do |c| %>
				<%= render 	:partial => "category", 
										:locals => {
									 	:title => c.category,
									 	:products => @products.where(category: c.category)} %>
			<% end %>
		</div>
		<div>
			<% if signed_in? && current_user.admin? %>
				<%= link_to 'New Product', new_product_path, label: 'New Product', class: "button" %>
				<%= link_to 'Download CSV', products_path(format: 'csv'), label: 'Download CSV', class: "button" %>
				<%= form_tag import_faqs_path, multipart: true do %>
					<%= file_field_tag :file %>
					<%= submit_tag "Upload CSV", class: "button" %>
				<% end %>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->
