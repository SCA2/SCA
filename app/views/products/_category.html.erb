<div class="section_header"><%= title %></div>
<% products.each do |product| %>
	<%= render 	:partial => "small_product", 
							:locals => {
							:p => product,
						 	:legend => product.model } %>
 	<% if signed_in? && current_user.admin? %>
	<div class="actions">
		<%= link_to 'Edit', edit_product_path(product), :class => :button, :style => "float: left; width: 33%" %>
		<%= link_to 'Show', product, :class => :button, :style => "float: left; width: 33%" %>
		<%= link_to 'Delete', product, method: :delete, :class => :button, :style => "float: left; width: 33%", data: { :confirm => 'Are you sure?' } %>
	</div>
	<% end %>
<% end %>

