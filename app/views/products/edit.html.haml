= provide(:title, "Edit Product #{ @product.id }")
.box_2
	.row
		.small-12.columns
			= form_for(@product) do |f|
				= render 'shared/errors', object: f.object
				= render partial: 'form', locals: { f: f, legend: "Edit #{ @product.model }"}
				.admin-box
					= f.submit "Update", class: "button admin"
					= link_to "Quit", product_path(@product), class: "button admin"
					= link_to "Delete", product_path(@product), method: :delete, class: "button admin", data: { :confirm => 'Are you sure?' }
