<div <%= get_product_div_class(index) %>>
	<div class="text-box" <%= "id=text-box-" + @product.id.to_s %>>
		<%= link_to @product.model, product_path(@product), class: :model %>
		<div class="short-description" <%= "id=short-description-" + @product.id.to_s %>>
			<%= @product.short_description %>
		</div>
		<div class="notes" <%= "id=notes-" + @product.id.to_s %>>
			<%= @product.notes %>
		</div>
		<div class="options-box" <%= "id=options-box-" + @product.id.to_s %>>
			<%= render 'options/option' %>
		</div>
		<div class="actions-box" <%= "id=actions-box-" + @product.id.to_s %>>
			<%= render 'options/action' %>
  	</div>
	</div>
	<div class="image-box" <%= "id=image-box-" + @product.id.to_s %>>
		<%= link_to image_tag(@product.image_1), product_path(@product) %>		
	</div>
 	<% if signed_in_admin? %>
		<div class="actions">
			<%= link_to 'Edit', edit_product_path(@product), class: "admin-button"%>
			<%= link_to 'Show', @product, class: "admin-button" %>
			<%= link_to 'Delete', @product, method: :delete, class: "admin-button", data: { :confirm => 'Are you sure?' } %>
		</div>
	<% end %>	
</div>
