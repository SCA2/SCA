<div class="small-product">
	<div class="text-box">
		<%= link_to product.model, product_path(product), class: :model %>
		<div class="short-description">
			<%= product.short_description %>
		</div>
		<div class="notes">
			<%= product.notes %>
		</div>
		<div class="options-box">
			<% if product.options.any? %>
				<% product.current_option ||= product.options.first.id.to_i %>
				<% option = product.options.find(product.current_option) %>
				<%= form_for :product, url: products_update_option_path(id: product), method: :put do |f| %>
					<%= f.select :current_option, (options_for_select get_extended_models(product),	product.current_option) %>
					<div class="price-line">
						<%= f.submit 'Update Price' %>
						<span class="price"><%= number_to_currency(option.price) %></span>
					<% end %>
					<%= button_to 'Add to Cart', line_items_path(product_id: product, option_id: option), remote: :true %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="image-box">
		<%= link_to image_tag(product.image_1), product_path(product) %>		
	</div>	
</div>
