= provide(:title, @product)
.box_2
	.row
		.small-12.columns
			= form_for(@product) do |f|
				= render 'shared/errors', object: f.object
				= render partial: 'form', locals: { f: f, legend: 'New Product' } 
				.admin-box
					= f.submit "Create", class: "button admin"
					= link_to "Quit", products_path, class: "button admin"