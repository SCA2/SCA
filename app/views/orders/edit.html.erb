<% provide(:title, 'Edit order') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns" style="margin: 1em 0em 1em 1em">
			<%= render 'layouts/sidebar_left', :products => @products %>
		</div>
		<div class="small-8 columns" style="margin: 5em 1em 0em 0em">
			<%= form_for(@order) do |f| %>
				<%= render 'shared/errors', object: f.object %>
				<%= render 'form' } %>
				<%= link_to 'Show', @order %> |
				<%= link_to 'Back', orders_path %>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->
