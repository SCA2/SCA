<fieldset class="confirm-address">
	<legend><%= legend %></legend>
	<table class="address-table">
		<tr class="field">
			<td class="input"><%= f.first_name + ' ' + f.last_name %></td>
		</tr>
		<tr class="field">
			<td class="input"><%= f.address_1 %></td>
		</tr>
		<% if f.address_2 && f.address_2.size > 0 %>
			<tr class="field">
				<td class="input"><%= f.address_2 %></td>
			</tr>
		<% end %>
		<tr class="field">
			<td class="input"><%= f.city + ', ' + f.state_code %></td>
		</tr>
		<tr class="field">
			<td class="input"><%= f.post_code %></td>
		</tr>
		<tr class="field">
			<td class="input"><%= f.country %></td>
		</tr>
		<tr class="field">
			<td class="input"><%= f.telephone %></td>
		</tr>
	</table>
</fieldset>
