<fieldset class="confirm-address">
	<legend><%= legend %></legend>
	<table class="confirm-table">
		<tr><td><%= f.first_name + ' ' + f.last_name %></td></tr>
		<tr><td><%= f.address_1 %></td></tr>
		<% if f.address_2 && f.address_2.size > 0 %>
			<tr><td><%= f.address_2 %></td></tr>
		<% end %>
		<tr><td><%= f.city + ', ' + f.state_code %></td></tr>
		<tr><td><%= f.post_code %></td></tr>
		<tr><td><%= f.country %></td></tr>
		<tr><td><%= f.telephone %></td></tr>
	</table>
</fieldset>
