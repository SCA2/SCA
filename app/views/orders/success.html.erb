<% provide(:title, 'Order Complete') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns" style="margin: 1em 0em 1em 1em">
			<%= render 'layouts/sidebar_left' %>
		</div>
		<div class="small-9 columns" style="margin: 5em 1em 0em 0em">
			<h6>Transaction Succeeded!</h6>
			
			<p>order_id: <%= @transaction.order_id %></p>
			<p>action: <%= @transaction.action %></p>
			<p>amount: <%= @transaction.amount %></p>
			<p>success: <%= @transaction.success %></p>
			<p>authorization: <%= @transaction.authorization %></p>
			<p>message: <%= @transaction.message %></p>
			<p>purchased_at: <%= @transaction.purchased_at %></p>
			<h6>Params</h6>
			<% @transaction.params.each do |key, value| %>
				<p><%= key.to_s + ': ' + value.to_s %></p>
			<% end %>
				
		</div>
	</div>	
</div>
