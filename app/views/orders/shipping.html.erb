<% provide(:title, 'Shipping Address') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns sidebar">
			<%= render 'layouts/sidebar_left' %>
		</div>
		<div class="small-9 columns main">
			<div class="addresses">				
				<%= render 'shared/progress_bar' %>
				<div class="billing-address">
					<%= form_for [@order,  @address], url: create_shipping_order_path(@order) do |f| %>
						<%= render 'shared/errors', object: f.object %>
						<%= render 'address_form', f: f, type: @type %>
						<%= f.submit 'Save', class: 'button' %>
					<% end %>
				</div>
			</div>
			<div class="actions">
				<%= link_to 'Back to Cart', :back, class: 'button', id: 'back' %>
				<%= button_to 'Continue Checkout', new_order_path, class: 'button', id: 'continue' %>
			</div>
		</div>
	</div>	
</div>

