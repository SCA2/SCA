<% provide(:title, 'Payment Method') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns sidebar">
			<%= render 'layouts/sidebar_left' %>
		</div>
		<div class="small-9 columns main">
			<%= render 'shared/progress_bar' %>
			<%= form_for @order, url: order_path(@order) do |f| %>
				<%= render 'shared/errors', object: f.object %>
				<%= render 'payment_form', f: f, legend: 'Card Info' %>
				<div class="actions">
					<div class="form-button">
						<%= link_to 'Back to Confirmation', :back, class: 'button', id: 'back' %>
					</div>
					<div class="form-button">
						<%= f.submit 'Continue Checkout', class: 'button' %>
					</div>
				</div>
			<% end %>
		</div>
	</div>	
</div>
