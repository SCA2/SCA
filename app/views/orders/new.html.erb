<% provide(:title, 'New Order') %>

<div class="box_2">
	<div class="row">
		<div class="small-12 columns" style="margin: 1em 0em 1em 0em">
			<%= form_for(@order.address) do |f| %>
				<% logger.debug '@order.address: ' + @order.address.inspect %>
				<div class="shipping-method">				
					<%= render 'shared/errors', object: f.object %>
					<%= render 'progress_bar' %>
					<p>Shipping method</p>
				<div id="actions">
					<%= link_to 'Back to Addresses', :back, class: "button", id: "back" %>
					<%= button_to 'Continue Checkout', f.submit, class: "button", id: "continue" %>
				</div>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->
