<fieldset id="billing-address">
	<legend><%= legend %></legend>
	<table class="address-table">
		<tr class="field">
			<td class="label"><%= f.label :first_name %></td>
			<td class="input"><%= f.text_field :billing_first_name %></td>
		</tr>
		<tr class="field">
			<td class="label"><%= f.label :last_name  %></td>
			<td class="input"><%= f.text_field :billing_last_name %></td>
		</tr>
		<tr class="field">
			<td class="label"><%= f.label :billing_address_1 %></td>
			<td class="input"><%= f.text_field :billing_address_1 %></td>
		</tr>
		<tr class="field">
			<td class="label"><%= f.label :billing_address_2 %></td>
			<td class="input"><%= f.text_field :billing_address_2 %></td>
		</tr>
		<tr class="field">
			<td class="label"><%= f.label :billing_city, 'City' %></td>
			<td class="input"><%= f.text_field :billing_city %></td>
		</tr>
		<tr class="field">
			<td class="label"><%= f.label :billing_state, 'State' %></td>
			<td class="input"><%= f.text_field :billing_state %></td>
		</tr>
		<tr class="field">
			<td class="label"><%= f.label :billing_post_code, 'Post Code' %></td>
			<td class="input"><%= f.text_field :billing_post_code %></td>
		</tr>
		<tr class="field">
			<td class="label"><%= f.label :billing_country, 'Country' %></td>
			<td class="input"><%= f.text_field :billing_country %></td>
		</tr>
		<tr class="field">
			<td class="label"><%= f.label :billing_telephone %></td>
			<td class="input"><%= f.text_field :billing_telephone %></td>
		</tr>
	</table>
</fieldset>
