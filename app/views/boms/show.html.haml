= provide(:title, "BOM #{@bc.id}")
.box_2
  .row
    .small-12.columns
      %fieldset
        %legend= "BOM #{@bc.product_model + @bc.option_model} Rev #{@bc.revision}"
        = render 'shared/errors', object: @bc.bom
        = render layout: 'bom_items/bom_item_headers' do
          = render @bc.bom_items
        .admin-box
          = link_to "Edit", edit_bom_path(@bc.id), class: "button admin"
          = link_to "Quit", boms_path, class: "button admin"
          = link_to "Delete", bom_path(@bc.id), method: :delete, class: "button admin", data: { confirm: 'Are you sure?' }