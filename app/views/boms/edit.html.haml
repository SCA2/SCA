= provide(:title, "BOM #{@bc.id}")
.box_2
  .row
    .small-1.columns &nbsp;
    .small-10.columns
      %fieldset
        %legend= "BOM #{@bc.product_model} Rev #{@bc.revision}"
        = form_for(@bc, url: bom_path(@bc.id), method: :put) do |bc_form|
          = render 'shared/errors', object: bc_form.object
          = render 'form', f: bc_form
          = bc_form.fields_for :bom_items, @bc.bom_items do |item_fields|
            = render 'bom_item',
            f: item_fields,
            item: @bc.bom_items[item_fields.index]
          = link_to "Add Item", new_item_bom_path(@bc.id)

          .admin-box
            = bc_form.submit "Update", class: "button admin"
            = link_to "Quit", boms_path, class: "button admin"
            = link_to "Delete", bom_path(@bc.id), method: :delete, class: "button admin", data: { confirm: 'Are you sure?' }
    .small-1.columns &nbsp;