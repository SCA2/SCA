= provide(:title, 'New FAQ category')

.box_2
  .row
    .medium-9.small-12.columns
      = form_for @category do |category|
        = render 'shared/errors', object: category.object
        = render 'form', f: category, legend: 'New FAQ Category'
        .admin-box
          = category.submit 'Create', class: 'button admin'
          = link_to 'Quit', faqs_categories_path, class: 'button admin'
    .medium-3.small-12.columns
      = render 'layouts/sidebar'