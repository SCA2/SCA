<% provide(:title, 'Reset Password') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns" style="margin: 1em 0em 1em 1em">
			<%= render 'layouts/sidebar_left', :products => @products %>
		</div>
		<div class="small-8 columns" style="margin: 5em 1em 0em 0em">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/errors', object: f.object %>
				<fieldset>
					<legend>Change Password</legend>
					<div class="field">
						<%= f.label :password, 'Password:' %>
						<%= f.password_field :password, size: 40 %>
					</div>
					<div class="field">
						<%= f.label :password_confirmation, 'Confirm:' %>
						<%= f.password_field :password_confirmation, size: 40 %>
					</div>
					<div class="actions">
						<%= f.submit submit %>
					</div>
				</fieldset>
			<% end %>
		</div>
	</div>	
</div>


