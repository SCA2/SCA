	<ul id="drop3" class="f-dropdown" data-dropdown-content>
		<% @products.each do |p| %>
			<li><%= link_to p.model + ' ' + p.category, product_path(p) %></li>
		<% end %>
	</ul>
<li><%= link_to "FAQ",			faqs_path %></li>
<li><%= link_to "Forums",		forums_path %></li>
<li><a href="/support" data-dropdown="drop1" data-options="is_hover:true">Support <b class="caret"></b></a>
	<ul id="drop1" class="f-dropdown" data-dropdown-content>
    <li><%= link_to "Assembly Tips",		tips_path %></li>
    <li><%= link_to "Troubleshooting",	troubleshooting_path %></li>
    <li><%= link_to "Repairs",					repairs_path %></li>
