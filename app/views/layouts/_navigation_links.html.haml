          %li= link_to "Failed", failed_orders_path
          %li= link_to "Pending", pending_orders_path
          %li= link_to "Shipped", shipped_orders_path
          %li= link_to "Abandoned", abandoned_orders_path
      %li.has-dropdown
        = link_to "Invoices", invoices_path
        %ul.dropdown
          %li= link_to "All", invoices_path
          %li= link_to "Pending", pending_invoices_path
          %li= link_to "Paid", paid_invoices_path
      %li= link_to "Users", users_path
      %li= link_to "Components", components_path
