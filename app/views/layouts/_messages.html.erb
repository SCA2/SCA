<%# Rails flash messages styled for Zurb Foundation %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
  <% alert_class = "alert-box #{ name == 'success' ? 'success' : 'alert' }" %>
  <!-- <% byebug %> -->
    <div data-alert class=<%= alert_class %>>
      <%= content_tag :div, msg %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
<% end %>
