<% provide(:title, 'Sign up') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns">
			<%= render 'layouts/sidebar_left' %>
		</div>
		<div class="small-9 columns">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/errors', object: f.object %>
				<%= render 'form', f: f, legend: 'Sign up', submit: 'Sign up' %>
				<div class="actions">
					<%= f.submit 'Create Account', class: 'button' %>
				</div>
			<% end %>
		</div>
	</div>	
</div>
