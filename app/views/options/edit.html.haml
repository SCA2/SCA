= provide(:title, "Edit #{@product.model} option #{@option.model}")

.box_2
	.row
		.small-12.columns
			= form_for [@product, @option] do |f|
				= render 'shared/errors', object: f.object
				= render partial: 'form', locals: { f: f, legend: "Edit #{@product.model} option #{@option.model}"}
				.admin-box
					= f.submit "Update", class: "button admin"
					= link_to "Quit", product_path(@product), class: "button admin"
					= link_to "Delete", product_option_path(@product, @option), method: :delete, class: "button admin", data: { confirm: 'Are you sure?' }
