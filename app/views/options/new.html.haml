= provide(:title, "New #{@option_editor.product_model} option")

.box_2
	.row
		.small-12.columns
			= form_for @option_editor, url: product_options_path do |f|
				= render 'shared/errors', object: f.object
				= render partial: 'new_form', locals: { f: f, legend: "Create #{@option_editor.product_model} option"}
				.admin-box
					= f.submit "Create", class: "button admin"
					= link_to "Quit", product_path(@option_editor.product), class: "button admin"
