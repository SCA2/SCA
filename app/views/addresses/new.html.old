<% provide(:title, 'New Address') %>

<div class="box_2">
	<div class="row">
		<div class="small-12 columns" style="margin: 1em 0em 1em 0em">
				<div class="addresses">				
					<%= render 'shared/progress_bar' %>
					<div class="billing-address">
						<%= form_for [@addressable,  @billing] do |f| %>
							<%= render 'shared/errors', object: f.object %>
							<%= render 'address_form', f: f, type: "billing" %>
							<%= f.submit 'Save', class: 'button' %>
						<% end %>
					</div>
					<div class="shipping-address">
						<%= form_for [@addressable, @shipping] do |f| %>
							<%= render 'shared/errors', object: f.object %>
							<%= render 'address_form', f: f, type: "shipping" %>
							<%= f.submit 'Save', class: 'button' %>
						<% end %>
					</div>
				</div>
				<div class="actions">
					<%= link_to 'Back to Cart', :back, class: 'button', id: 'back' %>
					<%= button_to 'Continue Checkout', new_order_path, class: 'button', id: 'continue' %>
				</div>
		</div>
	</div>	
</div> <!-- box_2 -->
