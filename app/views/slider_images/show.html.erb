<% provide(:title, @slider_image) %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns">
			<%= render 'layouts/sidebar_left' %>
		</div>
		<div class="small-9 columns">
			<%= form_for(@slider_image) do |f| %>
				<%= render 'shared/errors', object: f.object %>
				<%= render :partial => 'form', 	:locals => { 
																				:f => f, 
																				:legend => 'Slider Image ' << @slider_image.id.to_s,
																				:submit => nil,
																				:edit => 'Edit',
																				:quit => 'Quit',
																				:delete => 'Delete' } %>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->

