<% provide(:title, 'New Slider Image') %>

<div class="box_2">
	<div class="row">
		<div class="small-3 columns">
			<%= render 'layouts/sidebar_left' %>
		</div>
		<div class="small-9 columns">
			<div class="slider-image-index">
				<%= form_for @slider_image do |f| %>
					<%= render 'shared/errors', object: f.object %>
					<fieldset>
						<legend> New Slider Image </legend>
						<%= render 'form', f: f %>
						<div class="actions">
						<div class="action-spacer"></div>
							<div class="action-buttons">
								<%= f.submit 'Submit', class: :button %>
								<%= link_to 'Quit', slider_images_path, class: :button %>
							</div>
						</div>
					</fieldset>
				<% end %>
			</div>
		</div>
	</div>	
</div>

