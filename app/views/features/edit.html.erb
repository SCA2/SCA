<% provide(:title, 'Edit Feature ' + @feature.id.to_s) %>

<div class="box_2">
	<div class="row">
		<div class="small-12 columns">
			<%= form_for [@product, @feature] do |f| %>
				<%= render 'shared/errors', object: f.object %>
				<%= render :partial => 'form', :locals => { 
																				:f => f,
																				:p => @product,
																				:legend => 'Edit Feature ' + @feature.id.to_s, 
																				:submit => 'Save',
																				:quit => 'Quit',
																				:delete => 'Delete' } %>
			<% end %>
		</div>
	</div>	
</div> <!-- box_2 -->

